<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

    <PropertyGroup>
        <enterspeedv9ContentFilesPath>$(MSBuildThisFileDirectory)..\App_Plugins\enterspeedv9\**\*.*</enterspeedv9ContentFilesPath>
    </PropertyGroup>

    <Target Name="Copyenterspeedv9Assets" BeforeTargets="Build">
        <ItemGroup>
            <enterspeedv9ContentFiles Include="$(enterspeedv9ContentFilesPath)" />
        </ItemGroup>
        <Message Text="Copying enterspeedv9 files: $(enterspeedv9ContentFilesPath) - #@(enterspeedv9ContentFiles->Count()) files"  Importance="high" />
        <Copy
            SourceFiles="@(enterspeedv9ContentFiles)"
            DestinationFiles="@(enterspeedv9ContentFiles->'$(MSBuildProjectDirectory)\App_Plugins\enterspeedv9\%(RecursiveDir)%(Filename)%(Extension)')"
            SkipUnchangedFiles="true" />

    </Target>

    <Target Name="Clearenterspeedv9Assets" BeforeTargets="Clean">
        <ItemGroup>
            <enterspeedv9Dir Include="$(MSBuildProjectDirectory)\App_Plugins\enterspeedv9\" />
        </ItemGroup>
        <Message Text="Clear old enterspeedv9 data"  Importance="high" />
        <RemoveDir Directories="@(enterspeedv9Dir)"  />
    </Target>

</Project>
